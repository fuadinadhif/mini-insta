generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Post {
  id            Int      @id @default(autoincrement())
  imageName     String
  caption       String
  totalComments Int      @default(0)
  totalLikes    Int      @default(0)
  createdAt     DateTime @default(now())
}
